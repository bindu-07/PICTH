<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:height="@dimen/_16sdp" android:width="@dimen/_30sdp"/>
            <solid android:width="@dimen/_1sdp" android:color="@color/yellow"/>
            <corners android:radius="@dimen/_40sdp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:height="@dimen/_16sdp" android:width="@dimen/_30sdp"/>
            <solid android:width="@dimen/_1sdp" android:color="@color/light_white_30"/>
            <corners android:radius="@dimen/_40sdp"/>
        </shape>
    </item>
</selector>
