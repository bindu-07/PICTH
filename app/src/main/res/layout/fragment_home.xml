<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp"
    tools:context=".ui.presentation.homepage.HomeFragment">
    <include
        android:id="@+id/bottomBar"
        layout="@layout/header_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Stories"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvStories"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  android:layout_marginBottom="@dimen/_15sdp"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rv_moti_item"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Motivational Quote"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvBanner2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  android:layout_marginBottom="@dimen/_15sdp"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rv_moti_item"
                  />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvBanner3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rv3_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_50sdp"
                  android:background="@color/red"/>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvBanner4"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:itemCount="1"
                  tools:listitem="@layout/rv4_item" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:background="@color/red"/>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Festival"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvFestival"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Rank Promotion"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvRank"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Achievements"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvAchievements"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Bonanza Promotion"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvBonanza"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Anniversary"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvAnniversary"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Thank you Message"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvMsg"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Income Banner"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvIncome"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Meeting"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvMeeting"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rvfestival_item"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_2sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:background="@color/red"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Capping Achievements "
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginBottom="@dimen/_10sdp" />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvCapping"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:itemCount="1"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:listitem="@layout/rv_item"
                  />

          </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


