<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout/activity_forgot_password_0">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_background_512" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/ic_app_logo"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
        tools:layout_editor_absoluteX="3dp">

        <View
            android:id="@+id/view_yellow"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/line_dark_yellow"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_20sdp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_register"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/ic_lock"
            app:layout_constraintStart_toStartOf="@+id/view_yellow"
            app:layout_constraintTop_toBottomOf="@+id/view_yellow" />



        <LinearLayout
            android:id="@+id/ll_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_yellow">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dot_1"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_dot_yellow" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dot_2"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_dot_transparent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dot_3"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_dot_transparent" />
        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_forgot_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/label_forgot_password"
            android:textColor="@color/yellow"
            android:textFontWeight="700"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_register"
            app:layout_constraintTop_toTopOf="@+id/iv_register"
            app:textAllCaps="true" />
<!--        <androidx.fragment.app.FragmentContainerView-->
<!--            android:id="@+id/forgot_password_fragment_container"-->
<!--            android:name="androidx.navigation.fragment.NavHostFragment"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_marginTop="@dimen/_16sdp"-->
<!--            app:defaultNavHost="true"-->
<!--            android:layout_marginEnd="@dimen/_12sdp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="@+id/iv_register"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/iv_register"-->
<!--            app:layout_constraintVertical_bias="1"-->
<!--            app:navGraph="@navigation/nav_graph_forgot_password" />-->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:animateLayoutChanges="true"
            android:scrollbars="none"
            android:tag="layout/fragment_registration_two_0"
            app:layout_constraintEnd_toEndOf="@+id/label_forgot_password"
            app:layout_constraintStart_toStartOf="@+id/label_forgot_password"
            app:layout_constraintTop_toBottomOf="@+id/label_forgot_password">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/label_register_services"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:fontFamily="@font/poppins_regular"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="@string/label_forgot_password_desc"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/label_mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:alpha="0.5"
                android:fontFamily="@font/poppins_regular"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="@string/label_mobile_number"
                android:textColor="@color/white"
                android:textFontWeight="300"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_register_services" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:boxStrokeErrorColor="@color/yellow"
                app:errorIconTint="@color/yellow"
                app:errorTextColor="@color/yellow"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_mobile_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/label_enter_mobile"
                    android:inputType="number"
                    android:maxLength="10"
                    android:tag="binding_1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_white_50"
                    android:textCursorDrawable="@color/white"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintTop_toBottomOf="@+id/label_mobile_number" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/view_mobile_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:alpha="0.5"
                android:background="@color/white"
                android:visibility="visible"

                app:layout_constraintTop_toBottomOf="@+id/til_number" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_send_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_1sdp"
                android:tag="binding_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_mobile_number">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_send_otp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_button_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/label_send_otp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_send_otp"
                    app:layout_constraintEnd_toEndOf="@+id/img_send_otp"
                    app:layout_constraintStart_toStartOf="@+id/img_send_otp"
                    app:layout_constraintTop_toTopOf="@+id/img_send_otp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_send_otp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_already_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="@string/label_already_account"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_login_services"
                    app:layout_constraintTop_toBottomOf="@+id/view_password" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/label_login_now"
                    android:textColor="@color/yellow"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_login_services"
                    app:layout_constraintTop_toBottomOf="@+id/view_password" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
