<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout/activity_register_0">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_background_512" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/ic_app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_login"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
        tools:layout_editor_absoluteX="3dp">

        <View
            android:id="@+id/view_yellow"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/line_dark_yellow"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_20sdp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_register"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/ic_lock"
            app:layout_constraintStart_toStartOf="@+id/view_yellow"
            app:layout_constraintTop_toBottomOf="@+id/view_yellow" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:text="@string/label_register"
            android:textColor="@color/yellow"
            android:textFontWeight="700"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_register"
            app:layout_constraintStart_toEndOf="@+id/iv_register"
            app:layout_constraintTop_toTopOf="@+id/iv_register" />

        <LinearLayout
            android:id="@+id/ll_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_yellow">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dot_1"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_dot_yellow" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dot_2"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_dot_transparent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dot_3"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_dot_transparent"
                android:visibility="gone" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_register_services"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:alpha="0.5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/label_register_services"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_register"
            app:layout_constraintTop_toBottomOf="@+id/iv_register" />

        <!--        <androidx.fragment.app.FragmentContainerView-->
        <!--            android:id="@+id/register_fragment_container"-->
        <!--            android:name="androidx.navigation.fragment.NavHostFragment"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_marginTop="@dimen/_16sdp"-->
        <!--            app:defaultNavHost="true"-->
        <!--            android:layout_marginEnd="@dimen/_12sdp"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/label_register_services"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/label_register_services"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/label_register_services"-->
        <!--            app:layout_constraintVertical_bias="1"-->
        <!--            app:navGraph="@navigation/nav_graph_register" />-->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:animateLayoutChanges="true"
            android:scrollbars="none"
            android:tag="layout/fragment_registration_two_0"
            app:layout_constraintEnd_toEndOf="@+id/label_register_services"
            app:layout_constraintStart_toStartOf="@+id/label_register_services"
            app:layout_constraintTop_toBottomOf="@+id/label_register_services">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                <com.google.android.material.textview.MaterialTextView-->
<!--                    android:id="@+id/label_register_services"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:alpha="0.5"-->
<!--                    android:fontFamily="@font/poppins_regular"-->
<!--                    android:gravity="bottom"-->
<!--                    android:includeFontPadding="false"-->
<!--                    android:maxLines="2"-->
<!--                    android:text="@string/label_register_services"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textFontWeight="400"-->
<!--                    android:textSize="@dimen/_11ssp"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent" />-->

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="@string/label_4_digit_code"
                    android:textColor="@color/yellow"
                    android:textFontWeight="700"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                     />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_otp_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:alpha="0.5"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/label_otp_desc"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_otp" />

                <LinearLayout
                    android:id="@+id/ll_otp_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_otp_desc">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:autofillHints="smsOTPCode"
                        android:background="@drawable/bg_otp_box_selected"
                        android:cursorVisible="false"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"

                        android:inputType="number"
                        android:maxLength="1"
                        android:tag="binding_1"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@color/yellow"
                        android:textSize="@dimen/_20ssp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:autofillHints="smsOTPCode"
                        android:background="@drawable/bg_otp_box_unselected"
                        android:cursorVisible="false"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"

                        android:inputType="number"
                        android:maxLength="1"
                        android:tag="binding_2"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@color/yellow"
                        android:textSize="@dimen/_20ssp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_3"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:autofillHints="smsOTPCode"
                        android:background="@drawable/bg_otp_box_unselected"
                        android:cursorVisible="false"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:tag="binding_3"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@color/yellow"
                        android:textSize="@dimen/_20ssp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_4"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:autofillHints="smsOTPCode"
                        android:background="@drawable/bg_otp_box_unselected"
                        android:cursorVisible="false"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:tag="binding_4"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@color/yellow"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_otp_received"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/ll_otp_view">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_otp_not_received"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/label_otp_not_received"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_11ssp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_otp_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center"
                        android:maxLines="2"
                        android:tag="binding_5"
                        android:text="@string/label_request_new_otp"
                        android:textColor="@color/yellow"
                        android:textFontWeight="700"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_validate_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:padding="@dimen/_1sdp"
                    android:tag="binding_6"
                    app:layout_constraintTop_toBottomOf="@+id/ll_otp_received">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_button_bg"
                        app:layout_constraintHorizontal_bias="0.333"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/label_validate_otp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_sign_in"
                        app:layout_constraintEnd_toEndOf="@+id/img_sign_in"
                        app:layout_constraintStart_toStartOf="@+id/img_sign_in"
                        app:layout_constraintTop_toTopOf="@+id/img_sign_in" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/ll_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_validate_otp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_already_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="@string/label_already_account"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_login_services"
                        app:layout_constraintTop_toBottomOf="@+id/view_password" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/label_login_now"
                        android:textColor="@color/yellow"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_login_services"
                        app:layout_constraintTop_toBottomOf="@+id/view_password" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
