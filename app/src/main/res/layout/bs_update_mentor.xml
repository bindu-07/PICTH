<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_bottom_sheet"
    android:paddingBottom="@dimen/_16sdp"
    android:scrollbars="none"
    android:tag="layout/bs_update_mentor_0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_top_uplines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_25sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:text="@string/label_top_uplines"
            android:textColor="@color/yellow"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_close_filled"
            android:tag="binding_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:alpha="0.5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/label_name"
            android:textColor="@color/white"
            android:textFontWeight="300"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toTopOf="@+id/til_name"
            app:layout_constraintEnd_toStartOf="@+id/cl_profile"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            style="@style/CustomInputLayoutPadding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@android:color/transparent"
            app:boxStrokeErrorColor="@color/yellow"
            app:errorIconTint="@color/yellow"
            app:errorTextColor="@color/yellow"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintBottom_toTopOf="@+id/label_rank"
            app:layout_constraintEnd_toStartOf="@+id/cl_profile"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:digits="@string/label_allowed_digits"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/label_enter_name"
                android:inputType="text"
                android:maxLength="30"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:tag="binding_2"
                android:textColor="@color/white"
                android:textColorHint="@color/light_white_50"
                android:textCursorDrawable="@color/white"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:alpha="0.5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/label_rank"
            android:textColor="@color/white"
            android:textFontWeight="300"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toTopOf="@+id/cl_select_rank"
            app:layout_constraintEnd_toStartOf="@+id/cl_profile"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_select_rank"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/cl_profile"
            app:layout_constraintEnd_toStartOf="@+id/cl_profile"
            app:layout_constraintStart_toStartOf="parent">

            <Spinner
                android:id="@+id/spinner_rank"
                style="@style/Widget.AppCompat.ListView.DropDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_purple"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_down_arrow_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_down_arrow_one"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_rank"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/spinner_rank" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_mobile_number_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:alpha="0.4"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/cl_select_rank"
            app:layout_constraintStart_toStartOf="@+id/cl_select_rank"
            app:layout_constraintTop_toBottomOf="@+id/cl_select_rank" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_rank_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"
            android:text="@string/label_rank_selection"
            android:textAlignment="textStart"
            android:textColor="@color/yellow"
            android:textFontWeight="900"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/view_mobile_number_2"
            app:layout_constraintStart_toStartOf="@+id/view_mobile_number_2"
            app:layout_constraintTop_toBottomOf="@+id/view_mobile_number_2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_image_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"
            android:text="@string/label_image_required"
            android:textAlignment="textStart"
            android:textColor="@color/yellow"
            android:textFontWeight="900"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/cl_profile"
            app:layout_constraintStart_toStartOf="@+id/cl_profile"
            app:layout_constraintTop_toBottomOf="@+id/cl_profile" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_profile"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/bg_login"
            android:tag="binding_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_top_uplines">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:padding="1dp"
                android:src="@drawable/ic_app_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedCornersImageView" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_no_photo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:padding="@dimen/_20sdp"
                android:src="@drawable/ic_add_image"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_starred"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_star_yellow"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/ic_rectangle_yellow_gradient"
            android:tag="binding_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_rank_error">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_button_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/label_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/label_add"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toBottomOf="@+id/img_save"
                app:layout_constraintEnd_toEndOf="@+id/img_save"
                app:layout_constraintStart_toStartOf="@+id/img_save"
                app:layout_constraintTop_toTopOf="@+id/img_save"
                app:textAllCaps="true" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
